<section class="container">
    <div class="row">
        <form action="/add" method="post" enctype="multipart/form-data" role="form">
            <legend>Upload de fichier</legend>

            <div class="form-group">
                <label for="files" class="col-sm-4 control-label">Fichiers Ã  uploader</label>
                <div class="col-sm-8">
                    <input type="file" class="form-control" id="files" name="files[]" multiple>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <input type="submit" value="Download" class="form-control btn btn-primary">
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        {% for error in errors %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endfor %}
    </div>
</section>

